extends ../layout

block content
    .container
        if messages.success
            div.text-success
                for success in messages.success
                    div= success.msg
        if messages.error
            div.text-danger
                for error in messages.error
                    div= error.msg

        h3 Contact Form

        form(method='POST')
            label(for='name') Name
            input(type='text', name='name', id='name', autofocus)
            label(for='email') Kingsmen Email
            input(type='email', name='email', id='email')
            label(for='type') What do you need help with?
            select(name='type', id='type')

            label(for='message') Message
            textarea(name='message', id='message', rows='7')
            br
            button(type='submit') Send
